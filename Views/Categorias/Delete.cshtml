@model FerroShop.Models.Categoria

@{
    ViewData["Title"] = "Delete";
    bool tieneProductos = ViewBag.TieneProductos ?? false;
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar esta categoría?</h3>

<div>
    <h4>Categoría</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>

    @if (tieneProductos)
    {
        <div class="alert alert-warning">
            <strong>Advertencia:</strong> Esta categoría tiene productos asociados.
            <br />
            Si la eliminás, también se eliminarán todos los productos relacionados.
        </div>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <button type="submit" class="btn btn-danger">
            Sí, eliminar de todos modos
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

